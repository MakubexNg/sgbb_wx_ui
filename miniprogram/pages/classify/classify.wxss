/* 搜索背景 */
.search {
  background-color: #047ffc !important;
}

/* 分类页面 */
.classify-container {
  display: flex;
  background-color: #fff;
}

/* 分类页面左边 */
.classify-left {
  display: flex;
  flex-direction: column;
}

/* 分类页面左边内容 */
.classify-left-item {
  background-color: #f3f3f3;
  padding: 40rpx 40rpx;
  text-align: center;
  font-size: 26rpx;
  position: relative;
}

.classify-left-text {
  white-space: nowrap;
}

/* 分类页面左边内容选中 */
.classify-line {
  position: absolute;
  left: 0;
  width: 0;
  height: 50%;
  border: 6rpx solid #047ffc;
  top: 50%;
  transform: translateY(-50%);
}

.classify-select {
  background-color: #fff;
}

/* 分类页面右边 */
.classify-right {
  display: flex;
  /* 自动换行 */
  flex-wrap: wrap;
  width: 100%;
  align-content: flex-start;
}

.classify-right-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3%;
  padding: 20rpx 0;
}

.classify-right-item .classify-image {
  width: 90rpx;
  height: 90rpx;
}

.classify-right-item .classify-text {
  font-size: 26rpx;
}